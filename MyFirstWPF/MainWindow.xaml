<Window x:Class="MyFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnSayHello" Content="Say hello!" HorizontalAlignment="Left" Margin="90,90,0,0" VerticalAlignment="Top" Width="216" FontSize="20" Click="btnSayHello_Click"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="90,130,0,0" TextWrapping="Wrap" Text="Tähän tulee tervehdys" VerticalAlignment="Top" Width="216" FontSize="14" FontFamily="Showcard Gothic"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="90,53,0,0" TextWrapping="Wrap" Text="[kirjoita tähän nimesi]" VerticalAlignment="Top" Width="216"/>

    </Grid>
</Window>
