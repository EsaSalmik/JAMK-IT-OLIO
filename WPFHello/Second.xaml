<Window x:Class="WPFHello.Second"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHello"
        mc:Ignorable="d"
        Title="Second" Height="100" Width="400">
    <Grid>
        <StackPanel>
            <Button x:Name="btnSay" Content="Say Hello" Margin="5" Click="btnSay_Click"/>
            <TextBlock x:Name="tbMessage" FontSize="20" Text="Messages come here..." Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
